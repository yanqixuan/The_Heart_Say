.container {
    padding: 0 30rpx;
    margin-top: 50rpx;
}
.header-title {
    text-align: left;
    font-size: 35rpx;
    margin: 0 0 0 10rpx;
}
.content {
    position: relative;
    width: 100%;
    margin: 20rpx 20rpx 30rpx 10rpx;
}
.content-block {
    display: inline-block;
    width: 310rpx;
    height: 270rpx;
    margin:10rpx 30rpx 20rpx 0;
    border-radius: 10px;
    background: white;
    box-shadow:0px 2px 5px 5px #f1f1f1;
}
.content .content-block:nth-child(2n){
    margin: 0 20rpx;
}
.content .content-block image {
    width: 310rpx;
    height: 200rpx;
    border-radius: 10px;
}
.content .content-block .btn-text {
    display: block;
    font-size: 25rpx;
    text-align: center;
    margin: 10rpx 0 10rpx;
}