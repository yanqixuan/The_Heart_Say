/* components/productList/productList.wxss */
.main {
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}

.lists {
  /* height: 100rpx; */
  border-bottom: 1px solid #e0e0e0;
  display: flex;
  align-items: flex-end;
  padding-bottom: 20rpx;
  box-sizing: border-box;
}

.lists .list-img image {
  width: 100rpx;
  height: 100rpx;
  display: flex;
  flex-direction: column;
}

.lists .list-detail {
  height: 100rpx;
  font-size: 34rpx;
  margin-left: 20rpx;
}
.lists .list-detail {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.lists .list-add image {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  flex-direction: column;
  /* color: red; */
}

.lists .list-add .status-add {
  width: 200rpx;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

.status-add .jianhao image, 
.status-add .jiahao-add image {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  flex-direction: column;
}

.status-add .listNum {
  width: 60rpx;
  text-align: center;
  border-bottom: 1px solid #00ad61;
}